@objects
    leftPanel       id left-panel
    rightPanel      id right-panel
    header          id header
    menuToggle      id menuToggle
    pageTitle       id page-title

= Basic layout =
    @on desktop
        leftPanel:
            visible
            inside screen
            width 150 to 350px

        rightPanel:
            visible
            right-of leftPanel 0 to 60px

        header:
            visible
            inside rightPanel
            height 50 to 120px

        pageTitle:
            visible
            below header 5 to 80px
            inside rightPanel

    @on mobile
        leftPanel:
            height 0 to 50px
            width 0 to 360px

        rightPanel:
            visible
            inside screen
            width ~ 100% of screen/width

        header:
            visible
            inside rightPanel
            height 0 to 50px

        pageTitle:
            visible
            below header 5 to 30px
            inside rightPanel
